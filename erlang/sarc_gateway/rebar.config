%% -*- erlang -*-
{erl_opts, [
    debug_info,
    warnings_as_errors,
    {i, "include"}
]}.

{deps, [
    {cowboy, "2.12.0"},
    {jsx, "3.1.0"}
]}.

{plugins, []}.

{profiles, [
    {test, [
        {erl_opts, [
            debug_info,
            nowarn_export_all,
            {i, "_build/default/lib"}
        ]},
        {deps, []}
    ]}
]}.

{cover_enabled, false}.
{cover_opts, [verbose]}.

{eunit_opts, [
    verbose,
    {report, {eunit_surefire, [{dir, "_build/test/"}]}}
]}.

%% EUnit tests are embedded in source files using -ifdef(TEST)
{eunit_compile_opts, [debug_info]}.

%% Tell eunit to test the modules in src/
{eunit_first_files, []}.

{shell, [
    {apps, [sarc_gateway]}
]}.
