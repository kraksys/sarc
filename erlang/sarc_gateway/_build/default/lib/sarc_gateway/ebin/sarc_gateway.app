{application,sarc_gateway,
             [{description,"SARC Gateway - HTTP/REST API for SARC object store"},
              {vsn,"0.1.0"},
              {registered,[sarc_gateway_sup]},
              {mod,{sarc_gateway_app,[]}},
              {applications,[kernel,stdlib,cowboy,jsx]},
              {env,[{http_port,8080},
                    {data_root,"/tmp/sarc_data"},
                    {db_path,"/tmp/sarc.db"},
                    {max_upload_size,104857600}]},
              {modules,[sarc_codec,sarc_gateway_app,sarc_gateway_sup,
                        sarc_gc_handler,sarc_handler_utils,
                        sarc_health_handler,sarc_http_router,sarc_nif,
                        sarc_object_handler,sarc_port,sarc_query_handler,
                        sarc_upload_handler,sarc_ws_handler]},
              {licenses,["Apache-2.0"]},
              {links,[]}]}.
